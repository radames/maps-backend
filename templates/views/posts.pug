extends ../layouts/default

block content
	.container
		.row
			.col-xs-6.col-md-6
				h1 Posts List
				if posts.data
					each post in posts.data
						div
							h2= post.title
							!= post.description.html
							if post.hasImage
								img.img-responsive(src=post.imageURL)
							if post.hasVideo
								!=post.videoEmbed
							if post.hasInstagram
								!=post.instagramEmbed
							if post.hasTwitter
								!=post.twitterEmbed
							if post.hasAudio
								audio(preload="auto", autobuffer, controls)
									source(src=post.audioURL)
